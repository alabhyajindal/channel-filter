{
  "manifest_version": 2,
  "name": "Channel Filter",
  "version": "0.0.1",

  "description": "Filter YouTube channels from search",

  "icons": {
    "48": "icons/border-48.png"
  },

  "options_ui": {
    "page": "options.html"
  },

  "content_scripts": [
    {
      "matches": ["*://*.youtube.com/*"],
      "js": ["script.js"],
      "css": ["style.css"]
    }
  ],

  "permissions": ["storage"]
}

